---
interface Props {
    title: string;
}
const { title } = Astro.props;
import Styles from "../styles/global.css";
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href={Styles}>
</head>
<body class="bg-slate-800 text-slate-100 m-auto max w-3xl">
    <slot/>
</body>
</html>
